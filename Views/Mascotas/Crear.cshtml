@model TuProyecto.Models.Mascota

<form asp-action="Crear" method="post">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre"></span>
    </div>
    <div>
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" />
        <span asp-validation-for="Tipo"></span>
    </div>
    <div>
        <label asp-for="Edad"></label>
        <input asp-for="Edad" type="number" />
        <span asp-validation-for="Edad"></span>
    </div>
    <button type="submit">Enviar</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
